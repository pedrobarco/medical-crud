{
  "name": "medical-crud",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "yarn lerna run build",
    "test": "yarn lerna run test",
    "lint": "yarn lerna run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run test && lintstaged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md,scss,yaml,yml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "tsconfig-paths": "^3.9.0"
  }
}